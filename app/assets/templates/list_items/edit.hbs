<td class="own">
  <input type="checkbox" {{#if owned}}checked="checked"{{/if}} id="owned-cb-{{product_type_id}}" class="owned-cb" title="Do you own this item?"> <label for="owned-cb-{{product_type_id}}">I own this item.</label>
</td>
<td class="item">
  <div class="prod-thumb">
    <img src="{{image_url}}" alt="Shampoo or Body Wash">
  </div>
  <form class="new-list-item">
    <input id="list_item_product_type_id_{{product_type_id}}" name="list_item[product_type_id]" type="hidden" value="{{product_type_id}}">
    <input id="list_item_category_id_{{product_type_id}}" name="list_item[category_id]" type="hidden" value="{{category_id}}">
    <input id="list_item_priority_{{product_type_id}}" name="list_item[priority]" type="hidden" value="{{priority}}">
    <input id="list_item_when_to_buy_{{product_type_id}}" name="list_item[when_to_buy]" type="hidden" value="{{when_to_buy}}">
    <input id="list_item_rating_{{product_type_id}}" name="list_item[rating]" type="hidden" value="{{rating}}">
    <input id="list_item_image_url_{{product_type_id}}" name="list_item[image_url]" type="hidden" value="{{image_url}}">
    <div class="prod-desc">
      <div class="prod-category">
        {{product_type}}
      </div>
      <h3>{{name}}</h3>
      <div class="prod-note"></div>
      <fieldset>
        <legend><span>Product Info</span></legend>
        <p>
        <label for="list_item_name_{{product_type_id}}">Product name / brand</label>
        <input id="list_item_name_{{product_type_id}}" name="list_item[name]" size="30" type="text" autocomplete="off" value="{{name}}">
        </p>
        <fieldset>
          <legend><span>Need vs. Own</span></legend>
          <ul class="inline">
            <li>
            <input {{#unless owned}}checked="checked"{{/unless}} id="list_item_owned_0_{{product_type_id}}" name="list_item[owned]" type="radio" value="0"> <label for="list_item_owned_0_{{product_type_id}}">Need</label>
            </li>
            <li>
            <input {{#if owned}}checked="checked"{{/if}} id="list_item_owned_1_{{product_type_id}}" name="list_item[owned]" type="radio" value="1"> <label for="list_item_owned_1_{{product_type_id}}">Own</label>
            </li>
          </ul>
        </fieldset>
        <p>
        <label for="list_item_link_{{product_type_id}}">Link to buy</label>
        <input id="list_item_link_{{product_type_id}}" name="list_item[link]" size="30" type="text" value="{{link}}">
        </p>
        <p>
        <label for="list_item_notes_{{product_type_id}}">Notes</label> 
        <textarea cols="40" id="list_item_notes_{{product_type_id}}" name="list_item[notes]">{{notes}}</textarea>
        </p>
        <p class="label-norm">
        <input type="checkbox" class="chk-fb-share" id="chk-fb-share-{{product_type_id}}" checked> <label for="chk-fb-share-{{product_type_id}}" class="small">Share on Facebook</label>
        </p>
      </fieldset>
      <div class="prod-links">
        <ul>
          <li>
            <input class="save-item button bt-color" name="commit" type="submit" value="Save">
          </li>
          <li>
            <button type="reset" value="Reset" class="cancel-item button bt-light">Cancel</button>
          </li>
        </ul>
      </div>
    </div>
  </form>
</td>
<td class="rating">
</td>
