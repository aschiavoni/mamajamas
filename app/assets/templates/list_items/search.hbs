<div class="modal-overlay"> &nbsp; </div>
<div class="vertical-offset"></div>
<!-- modal window box -->
<div class="modal-box" id="search-modal">
  <!-- modal window close button -->
  <a href="#" class="bt-close ss-icon">Close</a>
  <!-- modal window header -->
  <h2>Find <strong>{{product_type_name}}</strong></h2>
  <!-- modal window content -->
  <div class="content">
    <div id="prod-search">
      <form method="POST" class="label-infield" id="frm-prod-search">
        <fieldset>
          <p>
          <label for="field-search">Search for {{product_type_name}}</label>
          <br />
          <input name="field-search" type="text" id="field-search" value="">
          </p>
        </fieldset>
      </form>
    </div>
    <div id="prod-search-results">
      <!-- carousel -->
      <div class="carousel">
        <ul class="clearfix search-results">
          <div class="progress-container">
            <img src="/assets/progress-bar.gif" class="progress" style="display: none;" />
          </div>
          <p class="no-search-results" style="display: none;">No results found</p>
        </ul>
        <a class="prev disabled" href="#">prev</a> <a class="next" href="#">next</a> </div>
      <!-- end carousel -->
      <h3>Suggested {{product_type_name}}</h3>
      <!-- carousel -->
      <div class="carousel">
        <ul class="clearfix suggestions">
          <p class="no-search-results" style="display: none;">No suggestions found</p>
        </ul>
        <a class="prev disabled" href="#">prev</a> <a class="next" href="#">next</a> </div>
      <!-- end carousel -->
    </div>
  </div>
  <!-- end modal window content -->
</div>
<!-- end modal window box -->
