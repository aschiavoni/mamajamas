<td class="own">
  <input id="own{{listItem.id}}" class="prod-owned" type="checkbox" title="Do you own this item?" {{#if listItem.owned}}checked="checked"{{/if}}> <label for="own{{listItem.id}}">I own this item.</label>
</td>
<td class="item">
  <div class="prod-thumb">
    <img src="{{listItem.image_url}}" alt="{{listItem.product_type}}">
  </div>
  <div class="prod-desc">
    <div class="prod-category">
      {{listItem.product_type_name}} <a href="#" class="bt-addanother"><strong>+</strong> <span>Add another</span></a>
    </div>
    <h3>
      <a href="{{listItem.link}}" target="_blank">{{listItem.name}}</a>
    </h3>
    {{#if listItem.notes}}
    <div class="prod-note closed">
      <div class="note-content">
        {{listItem.notes}}
      </div>
    </div>
    {{/if}}
    <!-- drop-down editing menu -->
    <div class="prod-edit-menu">
      <ul class="clearfix">
        <li>
        <a href="#" class="ss-write"><span>Edit</span></a>
        </li>
        <li>
        <a href="{{listItem.link}}" class="ss-cart" target="_blank"><span>Buy</span></a>
        </li>
        <li>
        <a href="#" class="ss-delete"><span>Delete</span></a>
        </li>
      </ul>
    </div><!-- / drop-down editing menu -->
  </div>
</td>
<td class="rating">
</td>
