<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, :class => "label-infield" }) do |f| %>
  <%= f.hidden_field :reset_password_token %>
  <!-- modal window header -->
  <h2>Change your password and username</h2>
  <!-- modal window content -->
  <div class="content">
    <p class="instruction">Please enter and confirm your new password. You can also change your username if you want.</p>
    <fieldset>
      <p>
      <%= f.label :username %>
      <br />
      <%= f.text_field :username %>
      <%= field_error resource, :username %>
      </p>
      <p>
      <%= f.label :password, "New password" %>
      <br />
      <%= f.password_field :password %>
      <%= field_error resource, :password %>
      </p>
      <p>
      <%= f.label :password_confirmation, "Confirm new password" %>
      <br />
      <%= f.password_field :password_confirmation %>
      <%= field_error resource, :password_confirmation %>
      </p>
    </fieldset>
  </div>
  <!-- end modal window content --> 
  <!-- window bottom buttons -->
  <div class="button-row">
    <button type="submit" class="button" id="bt-change-password">Update</button>
  </div>
<% end %>
