<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => "label-infield" }) do |f| %>
  <!-- modal window header -->
  <h2>Forgot your password?</h2>
  <!-- modal window content -->
  <div class="content">
    <p class="instruction">Please enter your username or your email address for password reset instructions.</p>
    <fieldset>
      <p>
      <%= f.label :login, "Username or email" %>
      <br />
      <%= f.text_field :login %>
      <%= field_error resource, :login %>
      </p>
    </fieldset>
  </div>
  <!-- end modal window content --> 
  <!-- window bottom buttons -->
  <div class="button-row">
    <button type="reset" class="button" id="bt-cancel">Cancel</button>
    <button type="submit" class="button" id="bt-create-account">Send me reset password instructions</button>
  </div>
<% end %>
