<li class="<%= "following" if following %>" id="<%= "friend_#{friend.id}" %>" data-friend-id="<%= friend.id %>" data-relationship-id="<%= following.id unless following.blank? %>">
  <%= image_tag friend.profile_picture.friend, alt: display_name(friend) %>
  <p>
    <strong class="mom"><%= truncate(display_name(friend), :length => 15) %></strong>
    <% if following -%>
      <em class="ss-icon check">checked</em>
    <% end -%>
  </p>
  <% if following -%>
    <button type="submit" class="button bt-light unfollow">Unfollow</button>
  <% else -%>
    <button type="submit" class="button bt-color bt-favored follow">Follow</button>
  <% end -%>
</li>
