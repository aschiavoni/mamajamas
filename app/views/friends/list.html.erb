<%= content_for :nav do %>
  <ul class="sidemenu">
    <li class="current">
      <%= link_to "My Friends", list_friends_path %>
    </li>
    <li>
      <%= link_to "Find Friends", new_friend_path %>
    </li>
  </ul>
<% end -%>
<h2 class="visuallyhidden">My Friends</h2>
<!-- friends list -->
<ul id="friendslist" class="clearfix friends-list">
  <% @friends.each do |friend| -%>
    <%= render partial: 'list_friend', locals: { friend: friend, following: current_user.following?(friend) } %>
  <% end -%>
</ul>
<!-- end friends list -->
