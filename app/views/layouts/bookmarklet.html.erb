  <head>
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:600,400,300' rel='stylesheet' type='text/css'>
    <meta charset="UTF-8">
    <title>Mamajamas</title>
    <meta name="description" content="">
    <!-- jquery -->
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js"></script>
    <!-- bxslider (for product image selector) -->
    <%= javascript_include_tag "b/application.js" %>
    <%= stylesheet_link_tag    "application", :media => "all" %>
  </head>
  <body class="addto-mamajamas">
    <!-- mamajamas bookmark window -->
    <div id="addto-mamajamas">
      <a class="bt-close ss-icon" href="#">Close</a>
      <div id="addto-mamajamas-container">
        <%= yield %>
      </div>
    </div>
    <!-- end window -->
    <script type="text/javascript">
     var Mamajamas = Mamajamas || {};
     Mamajamas.Context = Mamajamas.Context || {};
     <% if user_signed_in? -%>
     Mamajamas.Context.User = {
       id: <%= current_user.id %>,
       username: '<%= current_user.username %>'
     };
     <% end -%>
    </script>
  </body>
</html>
