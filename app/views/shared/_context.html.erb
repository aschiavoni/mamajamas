<script type="text/javascript">
<% if user_signed_in? -%>
Mamajamas.Context.User = new Mamajamas.Models.User({
  id: <%= current_user.id %>,
  username: '<%= current_user.username%>',
  first_name: '<%= current_user.first_name %>',
  last_name: '<%= current_user.last_name %>',
  display_name: '<%= current_user.full_name %>',
  zip_code: '<%= current_user.zip_code %>',
  country: '<%= current_user.country_code %>',
  country_name: '<%= current_user.country_name %>',
  guest: <%= current_user.guest? %>,
  has_list: <%= current_user.list.present? %>,
  is_google_connected: <%= current_user.google_connected? %>,
  is_facebook_connected: <%= current_user.facebook_connected? %>,
  friends_updated_at: new Date(<%= current_user.facebook_friends_updated_at.to_i * 1000 %>)
});
<% end -%>

Mamajamas.Context.Facebook = {
  appId: '<%= FACEBOOK_CONFIG["app_id"] %>',
  scope: '<%= FACEBOOK_CONFIG["scope"] %>'
}
</script>
